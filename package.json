{
  "name": "setanta",
  "version": "0.8.0",
  "description": "Setanta Irish Programming Language",
  "main": "index.js",
  "scripts": {
    "test": "jest && eslint --ext .ts --max-warnings=0 src/",
    "full-test": "jest && ./rundemos.sh",
    "lint": "eslint",
    "lint-all": "eslint --ext .ts src/",
    "gen": "tspeg src/grammar.gram src/gen_parser.ts",
    "build": "tspeg src/grammar.gram src/gen_parser.ts && tsc --declaration",
    "clean": "rm -rf node_build/ && rm -rf docs/_site/",
    "diff": "git diff -- . ':(exclude)src/gen_parser.ts'",
    "docs": "docker run --rm -it -v \"$PWD/docs:/srv/jekyll\" -v \"/tmp/gems:/usr/local/bundle\" -p 4000:4000 jekyll/jekyll:3.8 /bin/bash -c \"bundle update && bundle exec jekyll serve --host=0.0.0.0\""
  },
  "bin": {
    "setanta": "node_build/cli.js"
  },
  "author": "Eoin Davey",
  "repository": {
    "type": "git",
    "url": "https://github.com/EoinDavey/Setanta.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.5",
    "@types/node": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "jest": "^25.2.6",
    "ts-jest": "^25.3.0",
    "tspeg": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "^.+\\.js$"
    ]
  }
}

{
  "name": "setanta",
  "version": "0.3.3",
  "description": "Setanta Irish Programming Language",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "full-test": "jest && ./rundemos.sh && tslint -c tslint.json --project .",
    "lint": "tslint -c tslint.json --force",
    "lint-all": "tslint -c tslint.json --force \"src/**/*.ts\"",
    "gen": "tspeg src/grammar.gram src/gen_parser.ts",
    "build": "tspeg src/grammar.gram src/gen_parser.ts && tsc --declaration",
    "clean": "rm -rf node_build",
    "diff": "git diff -- . ':(exclude)src/gen_parser.ts'",
    "run-docs": "docker run --rm -it -v \"$PWD/docs:/srv/jekyll\" -v \"/tmp/gems:/usr/local/bundle\" -p 4000:4000 jekyll/jekyll:3.8 /bin/bash -c \"bundle update && bundle exec jekyll serve --host=0.0.0.0\""
  },
  "bin": {
    "setanta": "node_build/cli.js"
  },
  "author": "Eoin Davey",
  "repository": {
    "type": "git",
    "url": "https://github.com/EoinDavey/Setanta.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.5",
    "@types/node": "^13.11.0",
    "jest": "^25.2.6",
    "ts-jest": "^25.3.0",
    "tslint": "^6.1.1",
    "tspeg": "^1.3.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "^.+\\.js$"
    ]
  }
}
